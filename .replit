modules = [
  "web",
  "bash",
  "java-graalvm22.3",
  "nodejs-24",
  "typescript-language-server",
  "docker",
  "python-base-3.13",
]

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = [
  "chromium",
  "SDL2",
  "sdl3",
  "jq",
  "psmisc",
  "tree",
  "xorg.libxcb",
  "xorg.libX11",
  "xorg.libXcomposite",
  "xorg.libXdamage",
  "xorg.libXext",
  "xorg.libXfixes",
  "xorg.libXrandr",
  "mesa",
  "alsa-lib",
  "nss",
  "nspr",
  "dbus",
  "atk",
  "at-spi2-atk",
  "glib",
  "pango",
  "cairo",
  "libxkbcommon",
  "gtk3",
  "gdk-pixbuf",
  "xorg.libXcursor",
  "xorg.libXi",
  "libgbm",
]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev"

[[workflows.workflow]]
name = "dev"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "preview"]
build = ["npm", "run", "build"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 35243
externalPort = 3002

[[ports]]
localPort = 40803
externalPort = 3000
