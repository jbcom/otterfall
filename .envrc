
# OpenRouter API Configuration for CrewAI
# This forces litellm to use OpenRouter instead of OpenAI

# OpenRouter API Key (litellm expects OPENROUTER_API_KEY specifically)
export OPENROUTER_API_KEY="${OPENROUTER_API_KEY}"

# OpenAI-compatible endpoint configuration
export OPENAI_API_BASE="https://openrouter.ai/api/v1"

# Model selection (prepend "openrouter/" to your chosen model)
# Using Claude 3.5 Sonnet as configured in your crew agents
export OPENAI_MODEL_NAME="openrouter/anthropic/claude-3.5-sonnet"

# Optional: Other API keys your project uses
export MESHY_API_KEY="${MESHY_API_KEY}"
export GITHUB_PERSONAL_ACCESS_TOKEN="${GITHUB_PERSONAL_ACCESS_TOKEN}"
export DATABASE_URL="${DATABASE_URL}"
export ANTHROPIC_API_KEY="${ANTHROPIC_API_KEY}"

# Disable any OPENAI_API_KEY to prevent confusion
unset OPENAI_API_KEY
